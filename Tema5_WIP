#include <iostream>
#include <string>

class Airbus {
public: 

std::string name;
int age;

            std::string getName() {return name;}
           int getAge() {return age;}

  void setAge(int Age)
    {
      if (Age<=10) { age=Age;}
         else if (Age>=10 && Age<=20) { age=Age;}
               else { age=Age;}
    }       
    
  void setName (std::string Name)
   {
     if (Name == "Airbus") {name = Name;}
        else  {name = Name;}
   }    

protected:
  std::string type;
  int no_pass; //noumber of passengers

private:
  int private_research;

};


#include <iostream>
#include <string>

class Airbus {
public: 

std::string name;
int age;

       Airbus(std::string Name, int Age)    
           {
            name=Name;
            age=Age;
           }

           std::string getName() {return name;}
           int getAge() {return age;}

  void setAge(int Age)
    {
      if (Age<=10) { age=Age;}
         else if (Age>=10 && Age<=20) { age=Age;}
               else { age=Age;}
    }       
    
  void setName (std::string Name)
   {
     if (Name == "Airbus") {name = Name;}
        else  {name = Name;}
   }    

protected:
  std::string type;
  int no_pass; //noumber of passengers

private:
  int private_research;

};

class Boeing (std::string Name, int Age) : public Airbus(Name,Age) {};

int main()
{

  Airbus Airbus ("Airbus", 30);
     if (Airbus.age <= 10)  {   std::cout <<" The aircraft " << Airbus.name << " is young, it has " << Airbus.age << " years." << std:: endl;}
                else if (Airbus.age >= 10 && Airbus.age <= 20)  {   std::cout <<" The aircraft is not that old, " << Airbus.age << " years." << std:: endl;}
                      else {std::cout <<" The aircraft " << Airbus.name <<  " is old, it has "<< Airbus.age << " years." << std:: endl;} 

  Boeing Boeing ("Boeing",30);
  std::cout <<"The name of the aircraft is " << Boeing.name << " and it is in service for " << Boeing.age << " years.";
}

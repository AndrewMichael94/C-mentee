#include <iostream>
#include <string>

class Aircraft {
    public:
       int age,no_pass;
       std::string name,type;
       
       void maintenance() {std::cout << "This aircraft needs maintenance operations" << std::endl;}
       void research() {std::cout << "This aircraft needs research for increasing efficiency" << std::endl;}
       void finance() {std::cout << "This aircraft needs funding" << std::endl;}
       void marketing() {std::cout << "This aircraft needs to be sold" << std::endl;}
       
       void identity() {std::cout << "I am " << name << " " << type << ", i can transport " << no_pass << " of passangers " << " and I am in service for " << age << " years.";}
};       
       
int main()
{
  Aircraft object;
   object.age=7;
   object.no_pass=350;
   object.type="A350-XWB-1000";
   object.name="Airbus";
   object.identity();
  
}
